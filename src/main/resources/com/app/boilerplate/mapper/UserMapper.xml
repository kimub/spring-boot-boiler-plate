<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.boilerplate.mapper.UserMapper">
  <select id="getUserById" parameterType="int" resultType="com.app.boilerplate.dto.response.UserResponse">
    SELECT * FROM user WHERE id = #{id}
  </select>
  <select id="getAllUser" resultType="com.app.boilerplate.dto.response.UserResponse">
    SELECT * FROM user
  </select>
  <insert id="insertUser" parameterType="com.app.boilerplate.dto.request.UserRequest">
    INSERT INTO user (email, pw, name) VALUES (#{email}, #{pw}, #{name})
  </insert>
  <update id="updateUser" parameterType="map">
    UPDATE user SET email = #{userRequest.email}, pw = #{userRequest.pw}, name = #{userRequest.name} WHERE id = #{id}
  </update>
  <delete id="deleteUser" parameterType="int">
    DELETE FROM user WHERE id = #{id}
  </delete>
</mapper>
